# Production Environment Variables
# Copy this file to .env.production and fill in the actual values
# NEVER commit .env.production to git!

# ============================================================================
# Database Configuration
# ============================================================================
POSTGRES_USER=muscleup_prod
POSTGRES_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD
POSTGRES_DB=muscleup_production

# Use 'postgres' as hostname (Docker service name)
DATABASE_URL=postgresql+asyncpg://muscleup_prod:CHANGE_ME_TO_STRONG_PASSWORD@postgres:5432/muscleup_production

# ============================================================================
# Redis Configuration
# ============================================================================
# Use 'redis' as hostname (Docker service name)
REDIS_URL=redis://redis:6379/0

# ============================================================================
# JWT Configuration
# ============================================================================
# Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE_ME_TO_RANDOM_SECRET_KEY
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# CSRF Protection
# ============================================================================
# Generate with: openssl rand -hex 32
CSRF_SECRET_KEY=CHANGE_ME_TO_RANDOM_CSRF_KEY
CSRF_TOKEN_EXPIRE_MINUTES=60

# ============================================================================
# Azure OpenAI Configuration
# ============================================================================
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# ============================================================================
# Google OAuth Configuration
# ============================================================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ============================================================================
# Cookie Configuration
# ============================================================================
COOKIE_DOMAIN=api.muscleup.fitness
COOKIE_SECURE=true
COOKIE_SAMESITE=lax

# ============================================================================
# CORS Configuration
# ============================================================================
ALLOWED_ORIGINS=https://muscleup.fitness,https://www.muscleup.fitness,https://app.muscleup.fitness

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_PER_MINUTE=10

# ============================================================================
# Application Configuration
# ============================================================================
ENVIRONMENT=production
LOG_LEVEL=info
DEBUG=false